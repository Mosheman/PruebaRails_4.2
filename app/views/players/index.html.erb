<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <!-- <%#= link_to 'Start Play', temp_start_play_path, method: :post, :class => "btn btn-sm btn-success" %> -->
        <% if @weather %>
          <table class="table table-bordered">
            <thead>
              <tr>
                <% @weather.forecast[0..7].each do |f| %>
                  <th><%= f["date"] %></th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <tr>
                <% @weather.forecast[0..7].each do |f| %>
                  <td><%= f["text"] %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div> <!-- panel panel-default -->
  </div> <!-- col-md-12 -->
</div> <!-- row -->

<div class="row">

  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Last Play</h3>
      </div>
      <div class="panel-body fixed-panel">
        <% @plays.each do |p| %>
          <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Game played at: <%= p.created_at %></div>

            <table class="table  table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Betted color</th>
                  <th>Betted amount</th>
                </tr>
              </thead>

              <tbody>
                <% p.bets.each do |bet| %>
                  <tr>
                    <td><%= bet.player.name %></td>
                    <td><%= bet.betting_color %></td>
                    <td><%= bet.amount %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="panel-footer">Winner color: <%= p.winning_color.to_s.humanize.capitalize %></div>
          </div> <!-- panel panel-default -->
        <% end %>

      </div>

    </div> <!-- panel panel-default -->
  </div> <!-- col-md-5 -->

  <div class="col-md-7">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Listing Players</h3>
      </div>
      <div class="panel-body">
        <%= link_to new_player_path, :class => "btn btn-sm btn-primary" do %>
            <span class="glyphicon glyphicon-plus"></span> New Player
        <% end %>
        <!-- <%#= link_to temp_reset_all_players_money_path, method: :post, :class => "btn btn-sm btn-info" do %> -->
            <!-- <span class="glyphicon glyphicon-euro"></span> Reset Money -->
        <!-- <%# end %> -->

      </div> <!-- panel-body -->

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Money</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= player.name %></td>
              <td><%= player.money %></td>
              <td><%= link_to 'Show', player, :class => "btn btn-sm btn-primary" %></td>
              <td><%= link_to 'Edit', edit_player_path(player), :class => "btn btn-sm btn-warning" %></td>
              <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div> <!-- panel panel-default -->

  </div>

</div> <!-- row -->


<br>
